<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC">

    <!-- Menu bar -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#7CB342"
        android:gravity="center"
        android:padding="8dp">

        <!-- Nút Setting -->
        <LinearLayout
            android:id="@+id/menu_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/setting"
                android:background="@drawable/circle_background"
                android:contentDescription="Cài đặt"
                android:layout_gravity="center"
                android:padding="14dp"
                android:soundEffectsEnabled="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Nút Thoát -->
        <LinearLayout
            android:id="@+id/menu_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/exit"
                android:background="@drawable/circle_background"
                android:contentDescription="Thoát"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:soundEffectsEnabled="false"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section below menu bar -->
    <LinearLayout
        android:id="@+id/section_below_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F5F0DC"
        android:padding="7dp">

        <!-- Folder 1 -->
        <LinearLayout
            android:id="@+id/folder_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_folder_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:soundEffectsEnabled="false"
                android:contentDescription="Folder 1" />
        </LinearLayout>

        <!-- Folder 2 -->
        <LinearLayout
            android:id="@+id/folder_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_folder_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:soundEffectsEnabled="false"
                android:contentDescription="Folder 2" />
        </LinearLayout>

        <!-- Folder 3 -->
        <LinearLayout
            android:id="@+id/folder_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_folder_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_2"
                android:contentDescription="Folder 3"
                android:layout_marginTop="10dp"
                android:soundEffectsEnabled="false"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <!-- Folder 4 -->
        <LinearLayout
            android:id="@+id/folder_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_folder_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_1"
                android:contentDescription="Folder 4"
                android:layout_marginTop="10dp"
                android:soundEffectsEnabled="false"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section for mathematical operations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <!-- Phép Cộng -->
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="205dp"
            android:layout_height="90dp"
            android:src="@drawable/_pcong"
            android:contentDescription="Phép cộng"
            android:layout_marginBottom="15dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4A24F"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
        android:elevation="10dp" />

        <!-- Phép Trừ -->
        <ImageView
            android:id="@+id/iv_tru"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/_ptru"
            android:contentDescription="Phép trừ"
            android:layout_marginBottom="15dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4A24F"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:elevation="10dp" />

        <!-- Phép Nhân -->
        <ImageView
            android:id="@+id/iv_nhan"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/_pnhan"
            android:contentDescription="Phép nhân"
            android:layout_marginBottom="15dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4A24F"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:elevation="10dp" />

        <!-- Phép Chia -->
        <ImageView
            android:id="@+id/iv_chia"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/_pchia"
            android:contentDescription="Phép chia"
            android:layout_marginBottom="15dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4A24F"
            android:scaleType="fitXY"
            android:soundEffectsEnabled="false"
            android:elevation="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_thong_bao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#88000000"
        android:padding="10dp"
        android:gravity="center"
        android:visibility="gone" />


</LinearLayout>
