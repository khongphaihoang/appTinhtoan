<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC">

    <!-- Thanh tiêu đề full màn hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7CB342"
        android:gravity="center_vertical"
        android:padding="10dp">

        <!-- Tiêu đề ở giữa -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="          Cài đặt"
            android:textSize="25sp"

            android:textColor="#FFFFFF"
            android:gravity="center" />

        <!-- Icon Cài đặt ở bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/cross"
                android:background="@drawable/circle_background"
                android:contentDescription="Đóng"
                android:layout_gravity="center"
                android:padding="14dp"
                android:soundEffectsEnabled="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đóng"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bật/tắt Nhạc và Âm thanh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingBottom="20dp">

        <!-- Âm thanh -->
        <TextView
            android:id="@+id/tv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm thanh"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:id="@+id/img_sw"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sw_on"
            android:contentDescription="SW"
            android:layout_gravity="center"
            android:padding="1dp"
            android:soundEffectsEnabled="false"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Phiên bản ở góc dưới bên phải -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingTop="400dp"
        android:paddingRight="10dp"
        android:text="ver.1.00"
        android:textColor="#000000"
        android:textSize="24sp" />
</LinearLayout>
