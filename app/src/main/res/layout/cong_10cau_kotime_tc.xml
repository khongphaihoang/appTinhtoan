<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC">

    <!-- Menubar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#333333"
        android:gravity="center_vertical">



        <ImageView
            android:id="@+id/star"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/star"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"/>

        <!-- Số sao -->
        <TextView
            android:id="@+id/star_count"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="3/10"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"/>

        <!-- Nút Pause -->
        <ImageView
            android:id="@+id/img_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pause"
            android:background="@drawable/circle_background"
            android:contentDescription="Đóng"
            android:layout_gravity="center"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="3dp"
            android:padding="14dp"
            android:soundEffectsEnabled="false"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Phép toán (hiển thị ở giữa màn hình dưới menubar) -->
    <TextView
        android:id="@+id/math_problem"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#F5F5DC"
        android:padding="65dp"
        android:text="1 + 1 = ?"
        android:textColor="@android:color/black"
        android:textSize="70dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="50dp"
        android:autoSizeMaxTextSize="71dp"
        android:autoSizeStepGranularity="2dp"
        android:scrollHorizontally="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/result_message"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="22sp"
            android:visibility="gone" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#F1E8B8"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="4">

        <!-- Các nút (sử dụng ImageView cho mỗi nút) -->
        <ImageView
            android:id="@+id/button7"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/img_7off" />

        <ImageView
            android:id="@+id/button8"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_8off" />

        <ImageView
            android:id="@+id/button9"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_9off" />

        <ImageView
            android:id="@+id/button4"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/img_4off" />

        <ImageView
            android:id="@+id/button5"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_5off" />

        <ImageView
            android:id="@+id/button6"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_6off" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/img_1off" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_2off" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_3off" />

        <ImageView
            android:id="@+id/button0"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/img_0off" />

        <ImageView
            android:id="@+id/buttontru"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_truoff" />

        <ImageView
            android:id="@+id/buttonCE"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_ceoff" />

    </GridLayout>
</LinearLayout>
