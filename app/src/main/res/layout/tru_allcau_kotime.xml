<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8DC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7CB342"
        android:gravity="center_vertical"
        android:padding="10dp">

        <!-- Hình ảnh tiêu đề ở giữa -->
        <ImageView
            android:id="@+id/img_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/img_1"
            android:contentDescription="Tiêu đề"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:translationX="-140dp" />


        <!-- Icon Đóng ở bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cross"
                android:background="@drawable/circle_background"
                android:contentDescription="Đóng"
                android:layout_gravity="center"
                android:padding="10dp"
                android:soundEffectsEnabled="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đóng"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Hình ảnh trung tâm -->
        <ImageView
            android:id="@+id/img_trophy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_6"
            android:contentDescription="Trung tâm"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

        <!-- Tên Phép Toán -->
        <TextView
            android:id="@+id/tv_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Trừ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <!-- Các cấp độ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Sơ cấp -->
            <ImageView
                android:id="@+id/img_level_1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/img_9"
                android:contentDescription="Sơ cấp"
                android:soundEffectsEnabled="false"
                android:layout_marginEnd="10dp" />

            <!-- Trung cấp -->
            <ImageView
                android:id="@+id/img_level_2"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:src="@drawable/img_11"
                android:contentDescription="Trung cấp"
                android:soundEffectsEnabled="false"
                android:layout_marginEnd="10dp"
                />

            <!-- Cao cấp -->
            <ImageView
                android:id="@+id/img_level_3"
                android:layout_width="120dp"
                android:layout_height="51dp"
                android:src="@drawable/img_13"
                android:soundEffectsEnabled="false"
                android:contentDescription="Cao cấp" />
        </LinearLayout>

        <!-- Nút Chơi -->
        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chơi"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
